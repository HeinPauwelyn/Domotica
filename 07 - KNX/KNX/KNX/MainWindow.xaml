<Window x:Class="KNX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KNX"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <ListBox x:Name="lstOntvangen" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <TextBox x:Name="txbZenden" VerticalAlignment="Stretch" Height="25" Grid.Column="1"/>
        <Button x:Name="btnZenden" VerticalAlignment="Stretch" Height="25" Grid.Column="1" Margin="0,70,0,0" Content="Zenden"/>
    </Grid>
</Window>
